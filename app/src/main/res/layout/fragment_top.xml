<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/padding"
    tools:context="edu.mills.freeingourselves.TopFragment">

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/double_padding"
        android:text="@string/intro" />


    <!--Favorite workouts-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorite_workouts"/>

    <TextView
        android:id="@+id/no_fave_workouts_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_fave_workouts"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/favorite_workouts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
